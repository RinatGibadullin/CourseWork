<!DOCTYPE html>
<html>
  <head>
    <title>CourseWork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css'%>
  </head>

  <body style="background: #fff3e0">

    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-5 text-white border" style="background: #3F729B; box-shadow: 0 0 15px rgba(0, 0, 0, 0.5)">

      <h1 class="my-0 mr-md-auto font-weight-bold">MuzMagaz</h1>

      <nav class="my-2 my-md-0 mr-md-3">
        <h4><%= link_to 'На главную',home_path, class: "p-2 text-white" %></h4>
      </nav>
      
      <% if user_signed_in? %>
        <h2>
          <%= link_to current_user.username, profile_path, class: "btn btn-outline-warning text-white" %>
        </h2>

        <h2>
          <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary text-white" %>  
        </h2>

      <% else %>
        <h2><%= link_to 'Зарегистрироваться', new_user_registration_path, class: "btn btn-outline-primary text-white" %></h2>
        <h2><%= link_to 'Войти', new_user_session_path, class: "btn btn-outline-primary text-white" %></h2>
      <% end %>
    </div>

    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </body>
</html>
